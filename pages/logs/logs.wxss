.container{
  padding: 30rpx;
  
}
.record-list{
  width: 100%;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e0e0e0;
}
.item{
  box-sizing: border-box;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  color: #888;
  padding: 10rpx;
  border-bottom: 1rpx solid #e0e0e0;
  font-size: 30rpx;
}
.first-line{
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}
.title{
  color: #aa3;
}
.type{
  color: #f40;
}

